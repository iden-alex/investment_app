#:kivy 2.0.0 
WindowManager:
	FirstWindow: 
	SecondWindow:

<ItemLabel@Label>:
	font_size: '20'
	color: 0, 0, 0, 1

<FirstWindow>:
	name: "first"
	
	GridLayout:
		start_capital: input_capital
		game_duration: input_duration
		tax: input_tax

		rows: 6

		canvas.before:
			Color:
				rgba: (0.95, 0.95, 0.95, 0.95)
			Rectangle:
				pos: self.pos
				size: self.size

		AnchorLayout:
			size_hint: 1, 0.1
			Label:
				font_size: "25"
				text:  "Введите параметры игры"
				color: 0, 0, 0, 1 
	    GridLayout:
	    	cols: 2
	    	rows: 5
	    	padding: 50
	    	spacing: 50

			ItemLabel:
		    	text: "Начальный капитал, руб"
			TextInput:
				multiline: False
				id: input_capital
				input_type: 'number'
				input_filter: 'int'
			
			ItemLabel:
		    	text: "Длительность работы фонда, мес"
			TextInput:
				multiline: False
				id: input_duration
				input_type: 'number'
				input_filter: 'int'
			
			ItemLabel:
		    	text: "Процент налога на доход, %"
			TextInput:
				multiline: False
				id: input_tax
				input_type: 'number'
				input_filter: 'int'

			ItemLabel:
		    	text: "Степень изменчивость на рынке"
			TextInput:
				multiline: False
				input_type: 'number'
				input_filter: 'int'

			ItemLabel:
		    	text: "Начальная структура портфеля"
			TextInput:
				multiline: False
				input_type: 'number'
				input_filter: 'int'

		BoxLayout:
			size_hint: (0.9, 0.15)
			color: 0, 1, 0, 1
			padding: [240, 0, 240, 30]
			Button:
				text: 'НАЧАТЬ ИГРУ'
				on_press:
					app.root.current = "second"
					root.manager.transition.direction = "left"
					root.tmp()
<SecondWindow>:
	name: "second"
	BoxLayout:
		id: box