#:kivy 2.0.0

<ItemLabel@Label>:
	font_size: '20'
	color: 0, 0, 0, 1

 # -----------------------------------------------------------------

<StartWindow>:
	name: "start"
	GridLayout:
		rows: 6
		canvas.before:
			Color:
				rgba: (0.95, 0.95, 0.95, 0.95)
			Rectangle:
				pos: self.pos
				size: self.size

		AnchorLayout:
			size_hint: 1, 0.09
			padding: [0,30, 0, 0]
			Label:
				font_size: "25"
				
				text:  "Параметры игры"
				color: 0, 0, 0, 1 
	    GridLayout:
	    	cols: 2
	    	rows: 5
	    	padding: 50
	    	spacing: 50

			ItemLabel:
		    	text: "Начальный капитал, у.е."
			BoxLayout:
				padding: 20, 5, 20, 5
				NumericInput:
					id: input_capital
					min_value: 1
					max_value: 100000000
					halign: 'center'
					text: '100000'
					input_filter: 'int'
					hint_text: 'Введите число от {} до {}'.format(self.min_value, self.max_value)
				
			ItemLabel:
		    	text: "Длительность работы фонда, мес"
			BoxLayout:
				orientation: 'vertical'
				MDLabel:
					text: str(int(input_game_duration.value))
					pos_hint: {"center_y": 0.6}
					font_style: "H6"
					halign: "center"
				MDSlider:
					id: input_game_duration
					#min: 12
					min: 4
					max: 30
					value: 15

			ItemLabel:
		    	text: "Процент налога на доход, %"
			BoxLayout:
				orientation: 'vertical'
				MDLabel:
					text: str(int(input_tax.value))
					pos_hint: {"center_y": 0.6}
					font_style: "H6"
					halign: "center"
				MDSlider:
					id: input_tax
					min: 0
					max: 80
					value: 13

			ItemLabel:
		    	text: "Волатильность рынка"
			BoxLayout:
				padding: [80, 0, 80, 0]
				Spinner:
					id: input_volatility
					size: 100, 44
					text: 'Низкая'
					values: 'Низкая', 'Средняя', 'Высокая'
		BoxLayout:
			size_hint: (0.9, 0.15)
			color: 0, 1, 0, 1
			padding: [240, 0, 240, 20]
			Button:
				text: 'НАЧАТЬ ИГРУ'
				on_press:
					root.manager.transition.direction = "left"
					root.start_model()

# -----------------------------------------------------------------

<MainWindow>:
	name: "main"
	BoxLayout:
		orientation: 'vertical'
		rows: 2

		canvas.before:
			Color:
				rgba: (0.95, 0.95, 0.95, 0.95)
			Rectangle:
				pos: self.pos
				size: self.size
		BoxLayout:
			padding: (0, 40, 0, 40)
			orientation: 'horizontal'
			rows: 2

			BoxLayout:
				orientation: 'vertical'
				GridLayout:
					rows: 7
					cols: 3
					ItemLabel:
						text: 'Капитал фонда'
					ItemLabel:
						text: 'Всего,руб'
					ItemLabel:
						text: 'Весь период,руб'

					ItemLabel:
						bold: True
						text: 'Общий капитал'
					ItemLabel:
						id: cur_capital
						bold: True
					ItemLabel:
						bold: True
						id: delta_capital

					ItemLabel:
						text: 'В активах'
					ItemLabel:
						id: in_assets
					ItemLabel:
						bold:True
						id: delta_assets

					ItemLabel:
						text: 'В депозите'
					ItemLabel:
						id: in_deposits
					ItemLabel:
						bold:True
						id: delta_deposits

					ItemLabel:
						text: 'Свободных'
					ItemLabel:
						id: free_capital
					ItemLabel:
						text: ''

					ItemLabel:
						text: ''
					ItemLabel:
						text: 'Всего, шт'
					ItemLabel:
						text: 'Общий доход,руб'

					ItemLabel:
						bold: True
						text: 'Паи фонда'
					ItemLabel:
						bold: True
						id: full_fund_items
					ItemLabel:
						bold: True
						id: fund_items_income

			#Buttons to end month
			BoxLayout:
				padding: 30
				size_hint: (0.25, 1)

				GridLayout:
					rows: 4
					cols: 1
					AnchorLayout:
						canvas:
							Color:
								rgb: 110/255, 127/255, 214/255, 1
							Rectangle:
								pos: self.pos 
								size: self.size

						Label:
							id: month
							font_size: '24'
							text: 'Месяц 1/36'
					BoxLayout:
						#padding: 30, 30, 30, 30
						Button:
							id: end_game
							background_color: 109/255, 214/255, 113/255, 1
							font_size: '24'
							text: 'Закончить ход'
							on_press:
								root.end_turn()
					BoxLayout:
						#padding: 30, 30, 30, 30
						Button:
							background_color: 204/255, 153/255, 255/255, 1
							font_size: '24'
							text: 'История фонда'
							on_press: 
								root.show_history()
					BoxLayout:
						#padding: 30, 30, 30, 30
						Button:
							background_color: 219/255, 100/255, 113/255, 1
							font_size: '24'
							text: 'Начать заново'
							on_press: 
								root.restart_game()
		FloatLayout:
			BoxLayout:
				size_hint: 0.5, 0.1
				pos:(10, root.height / 2 - 50)
				orientation:'vertical'
				Label:
					text: "Список рыночных активов"
					font_size: 15
					color: 0, 0, 0, 1
			BoxLayout:
				size_hint: 0.5, 0.9
				orientation:'vertical'
				pos:(10, 10)
				id: table1

			BoxLayout:
				size_hint: 0.5, 0.1
				pos:(10 + root.width/2, root.height/2 - 50)
				orientation:
				Label:
					text: "Срочные депозиты"
					font_size: 15
					color: 0, 0, 0, 1
			BoxLayout:
				size_hint: 0.45, 0.9
				orientation:'vertical'
				pos:(30 + root.width/2, 10)
				id: table2

# -----------------------------------------------------------------

<AssetWindow>:
	name: "buy_sell_asset"
	FloatLayout:
		BoxLayout:
			size_hint: 0.5, 0.1
			pos:(10, root.height * 0.8)
			orientation:'vertical'
			Label:
				text: "Покупка/продажа активов"
				font_size: 25
				bold: True
				color: 0, 0, 0, 1
		GridLayout:
			size_hint: 0.75, 0.5
			pos:(root.width * 0.1, root.height * 0.3)
			cols: 2
	    	rows: 7
	    	#padding: 50
	    	#spacing: 50

			ItemLabel:
		    	text: "Название:"
			ItemLabel:
				id: asset_name
			
			ItemLabel:
		    	text: "Тип:"
			ItemLabel:
				id: asset_type

			ItemLabel:
		    	text: "Цена:"
			ItemLabel:
				id: asset_price

			ItemLabel:
		    	text: "В фонде, шт:"
			ItemLabel:
				id: assets_in_fund

			ItemLabel:
		    	text: "Свободных денег в фонде:"
			ItemLabel:
				id: free_sum

			ItemLabel:
		    	text: "Купить, шт"
			BoxLayout:
				orientation: 'vertical'
				padding: 100, 15, 100, 15
				NumericInput:
					id: buy_asset
					min_value: 0
					max_value: 0
					halign: 'center'
					input_filter: 'int'
					hint_text: 'Введите число от {} до {}'.format(self.min_value, self.max_value)
				
			ItemLabel:
		    	text: "Продать, шт"
			BoxLayout:
				orientation: 'vertical'
				padding: 100, 15, 100, 15
				NumericInput:
					id: sell_asset
					min_value: 0
					max_value: 0
					halign: 'center'
					input_filter: 'int'
					hint_text: 'Введите число от {} до {}'.format(self.min_value, self.max_value)

		BoxLayout:
			size_hint: 0.75, 0.05
			pos:(root.width * 0.125, root.height * 0.15)
			orientation:'vertical'
			BoxLayout:
				orientation: 'vertical'
				padding: root.width*0.25, 0, root.width*0.25, 0
				Button:
					#size_hint: 0.4, 0.03
					text: "Подтвердить и вернуться"
					font_size: 20
					background_color: 109/255, 214/255, 113/255, 1
					bold: True
					on_press: root.asset_restructuring()
		BoxLayout:
			size_hint: 0.25, 0.05
			pos:(root.width * 0.75, root.height * 0.825)
			orientation:'vertical'
			BoxLayout:
				orientation: 'vertical'
				padding: 50, 0, 50, 0
				Button:
					text: "Вернуться"
					font_size: 20
					background_color: 219/255, 100/255, 113/255, 1
					#bold: True
					on_press: root.return_to_main()
# -----------------------------------------------------------------


<DepositWindow>:
	name: "buy_sell_asset"
	FloatLayout:
		BoxLayout:
			size_hint: 0.5, 0.1
			pos:(10, root.height * 0.8)
			orientation:'vertical'
			Label:
				text: "Вклад в депозит"
				font_size: 25
				bold: True
				color: 0, 0, 0, 1
		GridLayout:
			size_hint: 0.75, 0.5
			pos:(root.width * 0.1, root.height * 0.3)
			cols: 2
	    	rows: 6
	    	#padding: 50
	    	#spacing: 50

			ItemLabel:
		    	text: "Название:"
			ItemLabel:
				id: deposit_name
			
			ItemLabel:
		    	text: "Срок, мес.:"
			ItemLabel:
				id: deposit_time

			ItemLabel:
		    	text: "Процент:"
			ItemLabel:
				id: deposit_perc

			ItemLabel:
		    	text: "Свободных денег в фонде:"
			ItemLabel:
				id: free_sum

			ItemLabel:
		    	text: "Условия:"
			BoxLayout:
				padding: 50, 0, 50, 0
				ItemLabel:
					text_size: self.width, None
					halign: 'center'
					text: "Деньги начисляются только после окончания срока"

			ItemLabel:
		    	text: "Вложить, у.е."
			BoxLayout:
				orientation: 'vertical'
				padding: 100, 20, 100, 20
				NumericInput:
					id: invest
					min_value: 0
					max_value: 0
					halign: 'center'
					input_filter: 'int'
					hint_text: 'Введите число от {} до {}'.format(self.min_value, self.max_value)
				

		BoxLayout:
			size_hint: 0.75, 0.05
			pos:(root.width * 0.125, root.height * 0.15)
			orientation:'vertical'
			BoxLayout:
				orientation: 'vertical'
				padding: root.width*0.25, 0, root.width*0.25, 0
				Button:
					#size_hint: 0.4, 0.03
					text: "Подтвердить и вернуться"
					font_size: 20
					background_color: 109/255, 214/255, 113/255, 1
					bold: True
					on_press: root.deposit_invest()
		BoxLayout:
			size_hint: 0.25, 0.05
			pos:(root.width * 0.75, root.height * 0.825)
			orientation:'vertical'
			BoxLayout:
				orientation: 'vertical'
				padding: 50, 0, 50, 0
				Button:
					text: "Вернуться"
					font_size: 20
					background_color: 219/255, 100/255, 113/255, 1
					#bold: True
					on_press: root.return_to_main()



# -----------------------------------------------------------------


<HistoryWindow>:
	name: "history"
	FloatLayout:
		BoxLayout:
			size_hint: 0.5, 0.1
			pos:(10, root.height * 0.8)
			orientation:'vertical'
			Label:
				text: "История операций фонда"
				font_size: 25
				bold: True
				color: 0, 0, 0, 1
		BoxLayout:
			size_hint: 0.75, 0.5
			pos:(root.width * 0.1, root.height * 0.25)
			ScrollView:
				MDList:
					id: acts_list
		BoxLayout:
			size_hint: 0.25, 0.05
			pos:(root.width * 0.75, root.height * 0.825)
			orientation:'vertical'
			BoxLayout:
				orientation: 'vertical'
				padding: 50, 0, 50, 0
				Button:
					text: "Вернуться"
					font_size: 20
					background_color: 219/255, 100/255, 113/255, 1
					on_press: root.return_to_main()